{% extends 'base.html.twig' %}

{% block title %}Band index{% endblock %}

{% block body %}
    <h3>Groupes</h3>
    <div class="card-deck">
        {% for band in bands %}
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">{{ band.name }}</h5>
                    <p class="card-text"><small class="text-muted"><a href="{{ path('band_show', {'id': band.id}) }}">let's see!</a></small></p>
                </div>
            </div>
        {% endfor %}

    </div>
    {% if is_granted("ROLE_ADMIN") %}
        <a href="{{ path('band_new') }}">Create new</a>
    {% endif %}
{% endblock %}
